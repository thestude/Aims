@model AIMS.Modules.Account.Models.PasswordResetInputModel


  <!-- BEGIN Forgot Password Form -->
<div id="form-forgot-wrapper" class="form-wrapper row">
    <div class="col-sm-5 col-md-4 col-lg-3 centered-col">
        @using (Html.BeginForm("Index","PasswordReset",FormMethod.Post,new{id = "form-forgot"}))
            {
                 @Html.ValidationSummary()
                 @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-xs-10 col-xs-offset-1">
                                <img src="~/content/images/aims-logo-300w.png" alt="Alabama Incident Management System" class="img-responsive centered">
                            </div>
                        </div>
        <hr />
        <!-- <legend>@ViewBag.Title</legend>-->
        <p><strong>Forget your password?</strong></p>

        <p>Tell us the email address attached to your account and we&rsquo;ll send you instructions to reset your password.</p>
        <hr />
        <div class="form-group">
            <div class="controls">
                <input type="text" placeholder="Email" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="controls">
                <button type="submit" class="btn btn-primary form-control">Recover</button>
            </div>
        </div>
        <hr />
        <p class="clearfix">
            <a href="@Url.Action("New", "Session")" class=" pull-left"><span>← Back to login</span></a>
        </p>
        }
    </div>
</div>

<!-- END Forgot Password Form -->



