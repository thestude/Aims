@model AIMS.Modules.Account.Models.LoginInputModel
@{
    ViewBag.Title = "Login";
}

                <!-- BEGIN Login Form -->
<div id="form-login-wrapper" class="form-wrapper row">
    <div class="col-sm-5 col-md-4 col-lg-3 centered-col">
        @if (User.Identity.IsAuthenticated)
{
    <p>
        You are already logged in as @User.Identity.Name but you 
        tried to access a resource that you do not have permission
        for. Please login with an account that does have access
        or contact your administrator to grant you access.
    </p>
        }
        @using (Html.BeginForm("Create","Session",FormMethod.Post,new{id = "form-login"}))
        {
            @Html.ValidationSummary()
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-xs-10 col-xs-offset-1">
                    <img src="~/content/images/aims-logo-300w.png" alt="Alabama Incident Management System" class="img-responsive centered">
                </div>
            </div>
        <hr />
        <!--<legend>@ViewBag.Title</legend>-->
            <p><strong>Login to your account</strong></p>

        <div class="form-group">
            <div class="controls">
                <input name="Username" type="text" placeholder="Username" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="controls">
                <input name="Password" type="password" placeholder="Password" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="controls">
                <label class="checkbox">
                    <input  name="RememberMe" type="checkbox" value="true" />
                    Remember me
                </label>
            </div>
        </div>
        <div class="form-group">
            <div class="controls">
                <button type="submit" class="btn btn-primary form-control">Sign In</button>
            </div>
        </div>
        <hr />
        <p class="clearfix">
            <a href="@Url.Action("Index", "PasswordReset")"class=" pull-left"><span>Forgot Password?</span></a>
            <a href="@Url.Action("New", "Registration")"class=" pull-right"><span>Request Access</span></a>
        </p>
        }
    </div>
</div>


<!-- END Login Form -->





