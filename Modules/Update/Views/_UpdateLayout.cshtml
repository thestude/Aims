@{
    Layout = "~/Views/Shared/_Layout.cshtml"; //Must be relative (refers to main apps layout)
}

@RenderBody()

@*Beginning of New General Request Modal*@
<!-- New General Request Modal -->
<div class="modal fade" id="newGeneralRequest" tabindex="-1" role="dialog" aria-labelledby="newGeneralRequestLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form class="mail-compose form-horizontal" action="#">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="newGeneralRequestLabel"><i class="fa fa-edit"></i>General Request</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="" class="col-sm-3">Request Type</label>
                        <div class="col-sm-9">
                            <select id="" class="form-control input-sm" name="">
                                <option value="1">Staff</option>
                                <option selected="selected" value="2">Supply</option>
                                <option value="3">Patient Transfer</option>
                                <option value="4">Other</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="col-sm-3">Request Category</label>
                        <div class="col-sm-9">
                            <select id="" class="form-control input-sm" name="">
                                <option selected="selected" value="-1">None</option>
                                <option value="1">Medication</option>
                                <option value="2">Medical Equipment</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="col-sm-3">Summary</label>
                        <div class="col-sm-9">
                            <input class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <textarea class="form-control wysihtml5" rows="6" placeholder="Comments"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="col-sm-3">Quantity</label>
                        <div class="col-sm-9">
                            <input class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="col-sm-3">Unit</label>
                        <div class="col-sm-9">
                            <select class="form-control">
                                <option selected="selected" value="-1">None</option>
                                <option value="1">Gallons</option>
                                <option value="2">Pounds</option>
                                <option value="3">Tonnes</option>
                                <option value="4">Kilograms</option>
                                <option value="5">Boxes</option>
                                <option value="6">Days</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="col-sm-3">Priority:</label>
                        <div class="col-sm-9">
                            <select class="form-control">
                                <option value="1">Normal</option>
                                <option value="1">Response Required</option>
                                <option value="2">Urgent</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-share-square-o"></i>Send</button>
                        <a type="button" class="btn" data-dismiss="modal">Cancel</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
@*End of New General Request Modal*@

@section scripts {
     @Scripts.Render("~/bundles/js/modules/Update")
}
@section styles {
    @Styles.Render("~/bundles/css/modules/Update")
}


